<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <EditText
                android:id="@+id/editTxtNameVisitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#700DEA"
                android:ems="10"
                android:hint="Enter Visitor's Name"
                android:inputType="textPersonName"
                android:textColor="#F8DD30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.03" />

            <EditText
                android:id="@+id/editTxtNationalIDVisitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#700DEA"
                android:ems="10"
                android:hint="Enter National ID No."
                android:inputType="number"
                android:textColor="#F8DD30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.208" />

            <EditText
                android:id="@+id/editTxtTelephoneNumberVisitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#700DEA"
                android:ems="10"
                android:hint="Enter Telephone Number"
                android:inputType="phone"
                android:textColor="#F8DD30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.324" />

            <EditText
                android:id="@+id/editTxtCompanyVisitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#700DEA"
                android:ems="10"
                android:hint="Enter Company"
                android:inputType="textPersonName"
                android:textColor="#F8DD30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTxtCompanyHostVisitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#700DEA"
                android:ems="10"
                android:hint="Enter Contact Person"
                android:inputType="textPersonName"
                android:textColor="#F8DD30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.619" />

            <EditText
                android:id="@+id/editTxtNatureOfVisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#700DEA"
                android:ems="10"
                android:hint="Enter Nature of Visit"
                android:inputType="textPersonName"
                android:textColor="#F8DD30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.729" />

            <Button
                android:id="@+id/btnRegisterVisitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:textColor="#F8DD30"
                android:backgroundTint="#700DEA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.949"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.976" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>